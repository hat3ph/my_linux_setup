<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <theme>
    <name></name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <keyboard>
    <default />
    <!-- Use a different terminal emulator -->
    <keybind key="W-Return">
      <action name="Execute" command="alacritty" />
    </keybind>
    <keybind key="W-E">
      <action name="Execute" command="geany" />
    </keybind>
    <keybind key="W-F">
      <action name="Execute" command="thunar" />
    </keybind>
    <keybind key="W-R">
      <action name="Execute" command="tofi-drun --drun-launch=true" />
    </keybind>
    <keybind key="W-Up">
      <action name="Execute" command="~/.local/bin/wpctl_audio.sh up" />
    </keybind>
    <keybind key="W-Down">
      <action name="Execute" command="~/.local/bin/wpctl_audio.sh down" />
    </keybind>
    <keybind key="W-M">
      <action name="Execute" command="~/.local/bin/wpctl_audio.sh mute" />
    </keybind>
    <keybind key="W-P">
      <action name="Execute" command="~/.local/bin/tofi_power_menu.sh" />
    </keybind>
    <keybind key="Print">
      <action name="Execute" command="~/.local/bin/grim_screenshot.sh full" />
    </keybind>
    <keybind key="A-Print">
      <action name="Execute" command="~/.local/bin/grim_screenshot.sh region" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>
      <mousebind button="Left" action="Press">
        <action name="None" />
      </mousebind>
      <mousebind button="Middle" action="Press">
        <action name="None" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>
